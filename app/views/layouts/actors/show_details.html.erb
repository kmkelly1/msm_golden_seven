<div class="page-header">
  <h1>Actor #<%= @actor.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd><%= @actor.image_url %></dd>

</dl>

<p><a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">Delete actor</a></p>

<p><a href="/actors/<%= @actor.id %>/edit_form" class="btn btn-primary">Edit actor</a></p>