<div class= "page-header">
    <h1>Directors</h1>
</div>

<p><a href="/directors/new_form" class="btn btn-primary">Add a New Director</a></p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Bio</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @directors.each do|director| %>
            <tr>
                <td><img src="<%= director.image_url %>" width ="80" </td>
                <td><%= director.name %></td>
                <td><%= director.dob %></td>
                <td><%= truncate(director.bio) %></td>
                <td>
                    <a href="/directors/<%= director.id %>" class="btn btn-primary">
                        See Details
                    </a>
                </td>
                <td>
                    <a href="/directors/<%= director.id %>/edit_form" class="btn btn-primary">
                        Edit Details
                    </a>
                </td>
                <td>
                    <a href="/delete_director/<%= director.id %>" class="btn btn-danger">
                        Delete Director
                    </a>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>