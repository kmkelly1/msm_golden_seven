<div class="page-header">
  <h1>Movie <% @movie%></h1>
</div>

<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @movie.description %></dd>

  <dt>Image</dt>
  <dd><%= @movie.image_url %></dd>
  
  <p><a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger">Delete movie</a></p>

<p><a href="/movies/<%= @movie.id %>/edit_form" class="btn btn-primary">Edit movie</a></p>


</dl>
